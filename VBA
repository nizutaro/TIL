Sub find_col() '列検索
    Dim i As Long
    For i = 1 To Cells(1, Columns.count).End(xlToLeft).Column '１行目の1列目から最終列の取得
        If Cells(1, i) = "name" Then  'もし１行目に"name"という列があったら
            Cells(1, i).EntireColumn.Select '行全体を選択する
            Exit For
        End If
    Next
End Sub

Public Function judgementZenkaku(ByVal p_value As String) As Boolean
    judgementZenkaku = False
    If Len(p_value) <> LenB(StrConv(p_value, vbFrmUnicode)) Then
        MsgBox ("全角が含まれています")
        judgementZenkaku = True
    End If
End Function
